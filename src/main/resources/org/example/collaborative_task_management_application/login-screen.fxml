            <Label layoutX="53.0" layoutY="155.0" text="Password">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" layoutX="25.0" layoutY="218.0" prefHeight="55.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <Button fx:id="signup_button" mnemonicParsing="false" text="SignUp" />
